<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageseachbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:text="ten bai hat"
        android:id="@+id/textviewseachbaihat"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:layout_toRightOf="@+id/imageseachbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/textviewseachbaihat"
        android:text="ca si"
        android:id="@+id/textviewseachcasi"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:layout_toRightOf="@+id/imageseachbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/imageviewseachluotthich"
        android:layout_width="30sp"
        android:layout_height="30dp" />
</RelativeLayout>